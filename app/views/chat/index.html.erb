      <%= f.password_field :password, value: "password", style: "display: none" %>
      <div>
        <%= f.submit 'Sign in as Kate', class: "btn" %>
      </div>
    <% end %>

    <%= form_for(:user, :url => session_path(:user)) do |f| %>
      <%= f.text_field :email, value: "bob@fake.com", style: "display: none" %>
