      <%= f.submit 'Sign in as Bob', class: "btn" %>
    <% end %>

    <%= form_for(:user, :url => session_path(:user)) do |f| %>
      <%= f.text_field :email, value: "john@fake.com", style: "display: none" %>
      <%= f.password_field :password, value: "password", style: "display: none" %>
      <%= f.submit 'Sign in as John', class: "btn" %>
    <% end %>
  </div>
<% end %>
