
<% if user_signed_in? %>
  <div class="nav">
    <div>Signed in as <%= current_user.name %> </div>
    <%= button_to "Log out", destroy_user_session_path, :method => "delete", class: "btn" %>
  </div>
  <div id="root"></div>
<% else %>
  <div class="nav">
    <%= form_for(:user, :url => session_path(:user)) do |f| %>
